  <div id="goatdiv">

  </div>

  <div class="row">
    <% if @query != FALSE %>
    <h5 class="col-md-offset-2 col-md-6">&nbsp;&nbsp;&nbsp;Resulting groups for "<%= @query.query %>"</h5>
    <% else %>
    <h3>   </h3>
    <% end %>


