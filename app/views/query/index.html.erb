    </a>
  </div>
</div>




  <!-- <div class="wrapper2"> -->

  <!-- <div class ="dynamic-div"> -->
      <div class="row row-horizon" id="main_results">
        <% @modules.each do |mod| %>
        <div class="col-md-2" style="z-index:-10;">
          <!-- <h1>Module <%= mod %></h1> -->
          <div class="panel panel-default module-div">


            <div class="panel-body">

              <% @data.each do |datum| %>
              <% if datum['module'].split(":")[0] == mod  %>
              <div class="panel">
                <div class="panel=body word-div" >
                  <!-- <% sizer = Math.log((datum.freq^10)*10000)  %> -->
                  <% sizer = datum.freq * 10  %>
                  <% if sizer > 30 %>
                  <% sizer = 30 %>
                  <% end %>
                  <p style="font-size:<%= sizer %>px;" class="word-div"><%= datum.word %></p>
                </div>

              </div>
              <% end %>

              <% end %>
            </div>

          </div>
        </div>
        <% end  %>
      </div>
